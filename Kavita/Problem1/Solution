#include <iostream>
#include <string>
using namespace std;

int main() {
    string a,b;
    cin>>a;
    cin>>b;
    int length_of_a = a.size();
    int length_of_b = b.size();
    
    //print two space-separated integers representing the length of  a and  b
    cout<<length_of_a <<" " ;
    cout<<length_of_b<<endl;
    
    //print the string production(a+b)
    string c=a+b;
    cout<<c<<endl;
    
    
    //first characters are swapped
    char c0=a[0]; //first character of string a
    char c1=b[0];  //first character of string b
    a[0]=c1;
    b[0]=c0;
    cout<<a<<" "<<b;
    
    return 0;
}
